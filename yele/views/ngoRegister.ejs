<% include partials/header %>

<form action="/ngoRegister" method="post" class="form-signin" style="margin-top: 50px;">
    <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal" style="color:rgb(47, 47, 47);">NGO Registration</h1>
    <label for="inputEmail" class="sr-only">NGO Name</label>
    <input type="text"  class="form-control" name="username" placeholder="User Name" required autofocus><br>
    <label class="">Address</label>
    <input type="text"  class="form-control" name="streetaddress" placeholder="Street Address" required autofocus>
    <input type="text"  class="form-control" name="city" placeholder="City" required autofocus>
    <input type="text"  class="form-control" name="postalcode" placeholder="Postal code" required autofocus>
    <input type="text"  class="form-control" name="state" placeholder="State" required autofocus><br>
    <label class="">Contact Details</label>
    <input type="text"  class="form-control" name="email" placeholder="email" required autofocus>
    <input type="text"  class="form-control" name="mobile_no" placeholder="Mobile No." required autofocus>
    <input type="url"  class="form-control" name="url" placeholder="Website Url" required autofocus><br>
    <label type="password" for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
    <div class="checkbox mb-3">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted"> Â© 2019 GitHub, Inc.</p>
  </form>

