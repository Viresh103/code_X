<% include partials/header %>


  <form action="/login" method="post" class="form-signin" style="margin-top:150px;">
  <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal" style="color:rgb(47, 47, 47);">Please sign in</h1>
  <select name="choice" required>
      <!-- <option>Select Category</option> -->
      <option>NGO</option>
      <option>Hotel</option>
  </select> 
  
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="text"  class="form-control" name="username" placeholder="User Name" required autofocus>
  <label type="password" for="inputPassword" class="sr-only">Password</label>
  <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
  <div class="checkbox mb-3">
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
</form>


